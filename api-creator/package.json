{
  "name": "api-creator",
  "version": "1.0.0",
  "description": "Creation of json file to be consumed by CarbonBlack",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:ci": "nodemon src/index.js",
    "dev": "env-cmd -f .env.local node src/index.js",
    "lint-staged": "lint-staged",
    "test:dev": "env-cmd -f .env jest ",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:codecov": "jest --coverage",
    "test:prod": "jest --bail",
    "snyk:test": "snyk test",
    "snyk:monitor": "snyk monitor",
    "test": "snyk test",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add",
      "env-cmd -f .env jest --bail --findRelatedTests"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Tomislav Andros",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@google-cloud/logging-winston": "^3.0.6",
    "amqplib": "^0.5.5",
    "cron": "^1.8.2",
    "mongoose": "^5.9.7",
    "snyk": "^1.319.1",
    "validator": "^13.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "codecov": "^3.6.5",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "nodemon": "^2.0.2"
  },
  "snyk": true
}
