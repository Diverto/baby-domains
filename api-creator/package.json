{
  "name": "api-creator",
  "version": "1.0.0",
  "description": "Creation of json file to be consumed by CarbonBlack",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:ci": "nodemon src/index.js",
    "dev": "env-cmd -f .env.local node src/index.js",
    "lint-staged": "lint-staged",
    "test:dev": "env-cmd -f .env jest ",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:codecov": "jest --coverage",
    "test:prod": "jest --bail",
    "snyk:test": "snyk test",
    "snyk:monitor": "snyk monitor"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add",
      "env-cmd -f .env jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Tomislav Andros",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@google-cloud/logging-winston": "^2.0.1",
    "amqplib": "^0.5.5",
    "cron": "^1.7.2",
    "mongoose": "^5.7.1",
    "validator": "^11.1.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "codecov": "^3.6.1",
    "env-cmd": "^10.0.1",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.3.0",
    "nodemon": "^1.19.2",
    "snyk": "^1.228.5"
  }
}
